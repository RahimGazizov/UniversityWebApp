@model List<Teachers>

<div class="container">
    <h1 class="title">Преподователи</h1>
    <div style="margin-bottom: 15px;">
        <a href="@Url.Action("Index","Registration")" class="btn_add">Добавить нового преподователя</a>
    </div>
    <table class="students-table">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Номер телефона</th>
                <th>Дата рождения</th>
                <th>Адрес</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var s in Model)
                {
                    <tr>
                        <td>@s.FullName</td>
                        <td>@s.PhoneNumber</td>
                        <td>@s.BirthDay.ToString("dd.MM.yyyy")</td>
                        <td>@s.Address</td>
                        <td>
                            <div class="action_de">
                                <form method="post" action="/Teachers/Delete/@s.Id" onsubmit="return confirm('Вы уверены что хотите удалить?')">
                                    <button type="submit" class="btn_del">Удалить</button>
                                </form>
                                <form method="get" action="/Teachers/Edit/@s.Id">
                                    <button type="submit" class="btn_edit">Редоктировать</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="empty">Нет данных о преподователях</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        max-width: 1300px;
        margin: 30px auto;
        padding: 20px;
    }

    .title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 28px;
        font-weight: bold;
        color: #333;
    }

    .students-table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-radius: 10px;
        overflow: hidden;
    }

        .students-table thead {
            background-color: #2c3e50;
            color: #fff;
        }

        .students-table th, .students-table td {
            padding: 12px 15px;
            text-align: left;
        }

        .students-table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .students-table tbody tr:hover {
            background-color: #e9ecef;
            transition: 0.3s;
        }

    .empty {
        text-align: center;
        padding: 20px;
        color: #777;
        font-style: italic;
    }

    .action_de {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn_del {
        padding: 10px 12px;
        background-color: red;
        color: white;
        border: none;
        border-radius: 5px;
        transition: all 0.2s ease-in-out;
    }

        .btn_del:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_edit {
        padding: 10px 12px;
        background-color: green;
        color: white;
        border: none;
        border-radius: 5px;
        transition: all 0.2s ease-in-out;
    }

        .btn_edit:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_add {
        padding: 10px 12px;
        background-color: green;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.2s ease-in-out;
    }

        .btn_add:hover {
            transform: scale(1.1);
            color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
</style>

@model List<Courses>
<h1>Курсы</h1>

<div class="conteiner">
    @if (TempData["Error"] != null)
    {
        <div style="color:red;font-size:19px;">@TempData["Error"]</div>
    }
    <div style="margin-bottom: 15px;">
        <a href="@Url.Action("Insert","Courses")" class="btn_add">Добавить курс</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>Курс</th>
                <th>Семестр</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var c in Model)
                {
                    <tr>
                        <td>@c.CoursesName</td>
                        <td>@c.Semester<span>-семестр</span></td>
                        <td>
                            <div class="action">
                                <form method="post" action="/Courses/Delete/@c.Id" onsubmit="return confirm('Вы уверены что хотите удалить?')">
                                    <button type="submit" class="btn_del">Удалить</button>
                                </form>
                                <form method="get" action="/Courses/Edit/@c.Id">
                                    <button type="submit" class="btn_edit">Редоктировать</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="3" style="font-style:italic;font-size: 16px;text-align:center;">Нет данных</td></tr>
            }
        </tbody>
    </table>
</div>
<style>
    body {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        margin-top: 60px;
        font-size: 29px;
        font-weight: bold;
        text-align: center;
    }

    .conteiner {
        max-width: 700px;
        margin: 10px auto;
        padding: 20px;
    }

    table {
        width: 100%;
        margin: 10px auto;
        box-shadow: 0 6px 8px rgba(0,0,0,0.1);
        border-radius: 12px;
        overflow: hidden;
        border-collapse: collapse;
    }

        table thead {
            background-color: #2c3e50;
            color: #fff;
        }

        table th, table td {
            padding: 8px 12px;
            text-align: left;
        }
        table tbody{
            background-color: #f8f9fa;
        }
    .action {
        display: flex;
        justify-content: left;
        gap: 10px;
    }

    .btn_del {
        padding: 12px;
        color: white;
        background-color: red;
        border-radius: 5px;
        border: none;
        transition: all 0.2s ease-in-out;
    }

        .btn_del:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_edit {
        padding: 12px;
        color: white;
        background-color: green;
        border-radius: 5px;
        border: none;
        transition: all 0.2s ease-in-out;
    }

        .btn_edit:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_add {
        padding: 12px;
        color: white;
        background-color: green;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.2s ease-in-out;
    }

        .btn_add:hover {
            transform: scale(1.1);
            color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
</style>
@using System.Security.Claims
@model List<Schedule>
@{
    var role = int.Parse(User.FindFirstValue(ClaimTypes.Role));

}
<div class="container">
    <h1 class="title">Расписание</h1>
    @if (TempData["Error"] != null)
    {
        <div style="color:red;font-size:19px;">@TempData["Error"]</div>
    }


    <div class="week">
        @if (role == 3)
        {
            <a asp-action="Insert" asp-route-dayweek="@ViewBag.SelectedDay" class="btn_add">Добавить расписание</a>

        }
        @for (int i = 1; i <= 6; i++)
        {
            string[] days = { "Понидельник", "Вторник", "Среда", "Четверг", "Пятницца", "Суббота" };
            <form method="post" asp-action="Index">
                <input type="hidden" name="dayweek" value="@i" />
                <button type="submit" class="btn_set @(ViewBag.SelectedDay == i ? "active-day" : "")">@days[i - 1]</button>
            </form>
        }
        <form method="post" asp-action="Index">
            <input type="hidden" value="" />
            <button type="submit" class="btn_set @(ViewBag.SelectedDay == null ? "active-day":"")">Все дни</button>
        </form>
    </div>

    <table class="students-table">
        <thead>
            <tr>
                <th>День недели</th>
                <th>Предмет</th>
                @if (role != 2)
                {
                    <th>Преподователь</th>
                }
                <th>Курс</th>
                <th>Семестр</th>
                <th>Группа</th>
                <th>Начало занятий</th>
                <th>Конец занятий</th>
                @if (role == 3)
                {
                    <th>Действие</th>
                }
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var s in Model)
                {
                    <tr>
                        <td>@s.DayOfWeekName</td>
                        <td>@s.Subject</td>
                        @if (role != 2)
                        {
                            <td>@s.TeacherName</td>
                        }
                        <td>@s.CourseName</td>
                        <td>@s.Semester</td>
                        <td>@s.GroupName</td>
                        <td>@s.StartTime</td>
                        <td>@s.EndTime</td>
                        @if (role == 3)
                        {
                            <td>
                                <div class="action_de">
                                    <form method="post" action="/Schedule/Delete/@s.Id" onsubmit="return confirm('Вы уверены что хотите удалить?')">
                                        <button type="submit" class="btn_del">Удалить</button>
                                    </form>
                                    <form method="get" action="/Schedule/Edit/@s.Id">
                                        <button type="submit" class="btn_edit">Редоктировать</button>
                                    </form>
                                </div>
                            </td>
                        }

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="empty">Список  пуст</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        max-width: 1300px;
        margin: 30px auto;
        padding: 20px;
    }

    .title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 28px;
        font-weight: bold;
        color: #333;
    }

    .students-table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-radius: 10px;
        overflow: hidden;
    }

        .students-table thead {
            background-color: #2c3e50;
            color: #fff;
        }

        .students-table th, .students-table td {
            padding: 12px 15px;
            text-align: left;
        }

        .students-table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .students-table tbody tr:hover {
            background-color: #e9ecef;
            transition: 0.3s;
        }

    .empty {
        text-align: center;
        padding: 20px;
        color: #777;
        font-style: italic;
    }

    .action_de {
        display: flex;
        justify-content: left;
        gap: 10px;
    }

    .btn_del {
        padding: 10px 12px;
        background-color: red;
        color: white;
        border: none;
        border-radius: 5px;
        transition: all 0.2s ease-in-out;
    }

        .btn_del:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_edit {
        padding: 10px 12px;
        background-color: green;
        color: white;
        border: none;
        border-radius: 5px;
        transition: all 0.2s ease-in-out;
    }

        .btn_edit:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .btn_add {
        padding: 10px 12px;
        background-color: green;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.2s ease-in-out;
        text-align: left;
    }

        .btn_add:hover {
            transform: scale(1.1);
            color: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .week {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-bottom: 15px;
    }

        .week form {
            margin: 0;
        }

    .btn_set {
        padding: 8px 12px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

        .btn_set:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

    .active-day {
        background-color: #004494 !important; /* зелёный для выбранного */
        font-weight: bold;
    }

</style>
